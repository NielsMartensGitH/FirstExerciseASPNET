@model FirstExerciseASPNET.ViewModels.CustomerViewModel
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Customers</h2>
@if (Model.Customers.Count == 0)
{
    <text>There are no customers here</text>
}
else
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @{ 
                var i = 1;
            }
            @foreach (var customer in Model.Customers)
            {
                <tr class="success">
                    <td>@i</td>
                    <td>@customer.Name</td>
                </tr>
                i++;
            }
    </tbody>
    </table>
}

